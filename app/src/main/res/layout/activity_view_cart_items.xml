<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewCartItems">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_cart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical" />

    <TextView
        android:layout_below="@+id/recycler_view_cart"
        android:id="@+id/text_total_id"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Total"
        android:textSize="16dp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textColor="@color/red"


        />

    <Button
        android:id="@+id/btn_buy_id"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recycler_view_cart"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/text_total_id"

        android:layout_toRightOf="@+id/text_total_id"
        android:text="Buy" />

</RelativeLayout>