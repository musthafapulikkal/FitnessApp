<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    android:paddingBottom="@dimen/row_padding_vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/row_padding_vertical"
    android:background="?android:attr/selectableItemBackground">
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageview_centre_id"/>
    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        android:paddingLeft="8dp"
        android:layout_toEndOf="@+id/imageview_centre_id"
        android:id="@+id/txt_centre_name"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/imageview_centre_id" />
    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_centre_name"
        android:textColor="@color/black"
        android:paddingLeft="8dp"
        android:drawableLeft="@drawable/ic_action_location"
        android:layout_toEndOf="@+id/imageview_centre_id"
        android:id="@+id/txt_centre_place"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/imageview_centre_id" />

</RelativeLayout>