<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.musthafa.fitness">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/fitnessicon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity" />
        <activity android:name=".AdminHome" />
        <activity android:name=".AddProducts" />
        <activity android:name=".AddTrainingCenters" />
        <activity android:name=".UserHome" />
        <activity android:name=".Registration" />
        <activity android:name=".TrainerRegistration" />
        <activity android:name=".TrainerHome" />
        <activity android:name=".ViewProduct" />
        <activity android:name=".Buyproduct" />
        <activity android:name=".UserAddProduct" />
        <activity android:name=".ViewUsers" />
        <activity android:name=".ViewTrainers" />
        <activity android:name=".TrainerProfile" />
        <activity android:name=".ViewCartItems" />
        <activity android:name=".PaymentDetails" />
        <activity android:name=".ViewOrders" />
        <activity android:name=".ViewFitnessCentres" />
        <activity android:name=".Splash" />
        <activity
            android:name=".IndexActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="com.example.musthafa.fitness.SHOW_CURRENT" />
                <action android:name="com.example.musthafa.fitness.SHOW_RECENT" />
                <action android:name="com.example.musthafa.fitness.SHOW_PENDING" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".AdminLogin" />
        <activity android:name=".UserLogin" />
        <activity android:name=".TrainerLogin" />
        <activity android:name=".AdminViewProducts" />
        <activity android:name=".UpdateProduct" />
        <activity android:name=".EditProduct" />
        <activity android:name=".InvoiceActivity" />
        <activity android:name=".PaymentSuccessActivity"></activity>
    </application>

</manifest>